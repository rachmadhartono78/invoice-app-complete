# Production Environment Configuration for Reverb

# Application
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Broadcasting - Use Reverb with Pusher protocol
BROADCAST_DRIVER=pusher
BROADCAST_CONNECTION=pusher

# Reverb Configuration
REVERB_APP_ID=738296
REVERB_APP_KEY=your-production-app-key
REVERB_APP_SECRET=your-production-app-secret
REVERB_SCHEME=https
REVERB_HOST=yourdomain.com
REVERB_PORT=443

# For frontend (Vite)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Queue - Use Redis for better performance in production
QUEUE_CONNECTION=redis

# Redis for queue and cache
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache
CACHE_STORE=redis
