[Unit]
Description=Laravel Reverb WebSocket Server
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
Restart=always
RestartSec=5s
ExecStart=/usr/bin/php /var/www/your-project/artisan reverb:start --host=0.0.0.0 --port=8080
StandardOutput=append:/var/www/your-project/storage/logs/reverb.log
StandardError=append:/var/www/your-project/storage/logs/reverb-error.log

[Install]
WantedBy=multi-user.target
